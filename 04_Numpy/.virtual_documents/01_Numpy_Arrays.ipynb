


import numpy as np


arr = np.array([1,2,3,4,5])


print(arr)


zero = np.zeros((3,3))
print(zero)


one = np.ones((3,5))
print(one)


# now if i want a matrix of particular number 
# yes we can generate that type of matrix using np.full method

full = np.full((3,7),8)
print(full)


# We can create an Identity Matrix in numpy
identity_matrix = np.eye(5)
print(identity_matrix)


# The numpy.arange() method in NumPy is used to create arrays with evenly spaced values within a specified range.
a = np.arange(1,100,9)
print(a)


# now if i want to have an array which have evenly spaced numbers between any two numbers
b = np.linspace(0, 1, 5)
print(b)


